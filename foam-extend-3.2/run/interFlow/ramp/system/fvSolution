FoamFile
{
    version         2.0;
    format          ascii;
    class           dictionary;
    location       "system";
    object          fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    pd
    {
        solver            CG;
        preconditioner    Cholesky;

        minIter           1;
        maxIter           200;
        tolerance         1e-9;
        relTol            0.0;
    }

    pdFinal
    {
        solver            CG;
        preconditioner    Cholesky;

        minIter           1;
        maxIter           1000;
        tolerance         1e-9;
        relTol            0.0;
    }

    U
    {
        solver            BiCGStab;
        preconditioner    ILU0;

        minIter           0;
        maxIter           500;
        tolerance         1e-8;
        relTol            0.0;
    }

    alpha1
    {
        solver            BiCGStab;
        preconditioner    ILU0;

        minIter           0;
        maxIter           500;
        tolerance         1e-8;
        relTol            0.0;
    }

    p
    {
        solver            CG;
        preconditioner    Cholesky;

        minIter           1;
        maxIter           200;
        tolerance         1e-8;
        relTol            0.0;
    }

}

PISO
{
    cAlpha          1;
}

PIMPLE
{
    nNonOrthogonalCorrectors 0;
    nOuterCorrectors         2;
    nCorrectors              2;

    limitMagU       1000;

    phaseAdjustPhi  off;

    nAlphaSubCycles 1;

    implicitP       no;

    startMotionTime 0;

    mixtureMomentum on; // It is actually hard coded to use mixture momentum
                        // (i.e. Ghost Fluid Method). This will be reorganised
                        // adhering to foam-extend-4.0 release
}

isoAdvector
{
    storeIsoface false;
}

relaxationFactors
{
    U            1;
    alpha1       1;
}


